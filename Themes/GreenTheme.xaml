<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="Backdrop" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#4CAF50" Offset="0.0" />
        <GradientStop Color="#81C784" Offset="0.55" />
        <GradientStop Color="#C8E6C9" Offset="1.0" />
    </LinearGradientBrush>


    <Style x:Key="DynamicTextHeaderStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource DynamicFont}" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="Foreground" Value="White" />
    </Style>

    <FontFamily x:Key="DynamicFont">Calibri</FontFamily>

    <Style x:Key="DynamicTextBlockStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{DynamicResource DynamicFont}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Foreground" Value="#db5f17" />
    </Style>

    <Style x:Key="CustomButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#4CAF50" /> 
        <Setter Property="Foreground" Value="White" />   
    <Setter Property="FontSize" Value="16" />        
    <Setter Property="FontWeight" Value="Bold" />   
    <Setter Property="Padding" Value="10,5" />     
        <Setter Property="BorderBrush" Value="Gray" />
        <Setter Property="BorderThickness" Value="6" />  
    <Setter Property="Cursor" Value="Hand" />  
    <Setter Property="HorizontalAlignment" Value="Center" />
    <Setter Property="VerticalAlignment" Value="Center" />
</Style>

</ResourceDictionary>